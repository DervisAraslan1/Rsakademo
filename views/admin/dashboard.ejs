<div class="content-header">
    <h2 class="content-title">
        <i class="fas fa-tachometer-alt"></i>
        Dashboard
    </h2>
</div>

<!-- Stats Cards -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="icon">
            <i class="fas fa-couch"></i>
        </div>
        <div class="number">
            <%= stats.totalProducts %>
        </div>
        <div class="label">Toplam Ürün</div>
    </div>
    <div class="stat-card">
        <div class="icon">
            <i class="fas fa-tags"></i>
        </div>
        <div class="number">
            <%= stats.totalCategories %>
        </div>
        <div class="label">Kategoriler</div>
    </div>
    <div class="stat-card">
        <div class="icon">
            <i class="fas fa-eye"></i>
        </div>
        <div class="number">
            <%= stats.monthlyViews.toLocaleString() %>
        </div>
        <div class="label">Bu Ay Görüntüleme</div>
    </div>
    <!-- <div class="stat-card">
        <div class="icon">
            <i class="fas fa-star"></i>
        </div>
        <div class="number">
            <%= stats.featuredProducts %>
        </div>
        <div class="label">Öne Çıkan Ürünler</div>
    </div> -->
</div>

<!-- Content Grid -->
<div class="row">
    <div class="col-lg-8">
        <div class="activity-feed">
            <h5 class="mb-4" style="color: var(--oak-brown); font-weight: 700;">
                <i class="fas fa-clock me-2"></i>Son Aktiviteler
            </h5>

            <% if (recentLogs && recentLogs.length> 0) { %>
                <% recentLogs.forEach(log=> { %>
                    <div class="activity-item">
                        <div class="activity-icon" style="<%= 
                log.action === 'CREATE' ? 'background: linear-gradient(45deg, var(--oak-brown), var(--cedar));' : 
                log.action === 'UPDATE' ? 'background: linear-gradient(45deg, var(--walnut), var(--mahogany));' : 
                log.action === 'DELETE' ? 'background: linear-gradient(45deg, var(--mahogany), var(--cedar));' : 
                'background: linear-gradient(45deg, var(--oak-brown), var(--cedar));' 
            %>">
                            <% if (log.action==='CREATE' ) { %>
                                <i class="fas fa-plus"></i>
                                <% } else if (log.action==='UPDATE' ) { %>
                                    <i class="fas fa-edit"></i>
                                    <% } else if (log.action==='DELETE' ) { %>
                                        <i class="fas fa-trash"></i>
                                        <% } else { %>
                                            <i class="fas fa-info"></i>
                                            <% } %>
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">
                                <%= log.getDescription() %>
                            </div>
                            <div class="activity-time">
                                <i class="far fa-clock me-1"></i>
                                <%= log.getTimeAgo() %>
                            </div>
                        </div>
                    </div>
                    <% }) %>

                        <div class="text-center mt-3">
                            <a href="/admin/logs" class="btn btn-sm"
                                style="background: var(--oak-brown); color: white;">
                                <i class="fas fa-history me-1"></i>
                                Tüm Logları Görüntüle
                            </a>
                        </div>
                        <% } else { %>
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3" style="opacity: 0.3;"></i>
                                <p>Henüz aktivite yok</p>
                            </div>
                            <% } %>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="activity-feed">
            <h5 class="mb-4" style="color: var(--oak-brown); font-weight: 700;">
                <i class="fas fa-chart-line me-2"></i>Bu Haftaki Özetler
            </h5>

            <div style="text-align: center; padding: 20px 0;">
                <div style="font-size: 2rem; color: #27ae60; margin-bottom: 10px;">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <div style="font-size: 2rem; font-weight: bold; color: var(--espresso); margin-bottom: 5px;">
                    <%= stats.weeklyNewProducts %>
                </div>
                <div style="color: var(--walnut); font-size: 0.9rem; font-weight: 600;">Yeni Ürün Eklendi</div>
                <small style="color: rgba(111, 78, 55, 0.6);">Son 7 gün</small>
            </div>

            <hr style="border-color: rgba(139, 69, 19, 0.2);">

            <div style="text-align: center; padding: 20px 0;">
                <div style="font-size: 2rem; color: #3498db; margin-bottom: 10px;">
                    <i class="fas fa-edit"></i>
                </div>
                <div style="font-size: 2rem; font-weight: bold; color: var(--espresso); margin-bottom: 5px;">
                    <%= stats.weeklyUpdates || 0 %>
                </div>
                <div style="color: var(--walnut); font-size: 0.9rem; font-weight: 600;">Güncelleme Yapıldı</div>
                <small style="color: rgba(111, 78, 55, 0.6);">Son 7 gün</small>
            </div>

            <hr style="border-color: rgba(139, 69, 19, 0.2);">

            <div style="text-align: center; padding: 20px 0;">
                <div style="font-size: 2rem; color: var(--cedar); margin-bottom: 10px;">
                    <i class="fas fa-tags"></i>
                </div>
                <div style="font-size: 2rem; font-weight: bold; color: var(--espresso); margin-bottom: 5px;">
                    <%= stats.totalCategories %>
                </div>
                <div style="color: var(--walnut); font-size: 0.9rem; font-weight: 600;">Aktif Kategori</div>
                <small style="color: rgba(111, 78, 55, 0.6);">Toplam</small>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="quick-actions">
    <a href="/admin/products/create" class="quick-action">
        <i class="fas fa-plus"></i>
        <div class="title">Yeni Ürün Ekle</div>
        <div class="description">Hızlıca yeni ürün ekleyin</div>
    </a>
    <a href="/admin/categories" class="quick-action">
        <i class="fas fa-tags"></i>
        <div class="title">Kategori Yönet</div>
        <div class="description">Kategorileri düzenleyin</div>
    </a>
    <!-- <a href="/admin/sliders" class="quick-action">
        <i class="fas fa-images"></i>
        <div class="title">Slider Güncelle</div>
        <div class="description">Ana sayfa slider'ını düzenleyin</div>
    </a> -->
    <a href="/admin/settings" class="quick-action">
        <i class="fas fa-cogs"></i>
        <div class="title">Site Ayarları</div>
        <div class="description">Genel ayarları yapılandırın</div>
    </a>
</div>