    <script>
        // DataTables and Navigation functionality
        $(document).ready(function () {
            // Initialize DataTables
            let productsTable = null;
            let categoriesTable = null;

            // Sidebar navigation
            $('.menu-item').on('click', function (e) {
                e.preventDefault();

                const section = $(this).data('section');

                // Update active menu item
                $('.menu-item').removeClass('active');
                $(this).addClass('active');

                // Hide all content sections
                $('.content-section').hide();

                // Show selected section
                $(`#${section}-section`).show();

                // Initialize DataTables when sections are shown
                if (section === 'products' && !productsTable) {
                    productsTable = $('#productsTable').DataTable({
                        responsive: true,
                        pageLength: 10,
                        order: [[6, 'desc']], // Order by date
                        language: {
                            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                        },
                        columnDefs: [
                            { orderable: false, targets: [0, 7] } // Disable ordering for image and actions
                        ]
                    });
                }

                if (section === 'categories' && !categoriesTable) {
                    categoriesTable = $('#categoriesTable').DataTable({
                        responsive: true,
                        pageLength: 10,
                        order: [[0, 'asc']], // Order by category name
                        language: {
                            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
                        },
                        columnDefs: [
                            { orderable: false, targets: [1, 2, 6] } // Disable ordering for color, icon and actions
                        ]
                    });
                }
            });

            // Quick action navigation
            $('.quick-action').on('click', function (e) {
                e.preventDefault();

                const section = $(this).data('section');
                if (section) {
                    // Trigger menu item click
                    $(`.menu-item[data-section="${section}"]`).click();
                }
            });

            // Demo delete functionality
            $(document).on('click', '.btn-outline-danger', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Emin misiniz?',
                    text: 'Bu öğeyi kaldırmak istediğinizden emin misiniz?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#C04000',
                    cancelButtonColor: '#6F4E37',
                    confirmButtonText: 'Evet, Kaldır!',
                    cancelButtonText: 'İptal',
                    customClass: {
                        popup: 'furniture-swal'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Remove the row (demo)
                        $(this).closest('tr').fadeOut(function () {
                            $(this).remove();
                        });

                        Swal.fire({
                            title: 'Kaldırıldı!',
                            text: 'Öğe başarıyla kaldırıldı.',
                            icon: 'success',
                            timer: 2000,
                            showConfirmButton: false,
                            customClass: {
                                popup: 'furniture-swal'
                            }
                        });
                    }
                });
            });

            // Demo edit functionality
            $(document).on('click', '.btn-outline-primary', function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Düzenleme Modu',
                    text: 'Bu özellik henüz geliştirilmekte...',
                    icon: 'info',
                    confirmButtonColor: '#8B4513',
                    customClass: {
                        popup: 'furniture-swal'
                    }
                });
            });

            // Demo data updates (simulate real-time updates)
            setInterval(function () {
                // Random number updates for demo
                const views = Math.floor(Math.random() * 100) + 1200;
                $('.stats-grid .stat-card:nth-child(3) .number').text(views.toLocaleString());
            }, 5000);

            // Add some furniture-themed animations
            $('.stat-card').hover(
                function () {
                    $(this).find('.icon').addClass('fa-bounce');
                },
                function () {
                    $(this).find('.icon').removeClass('fa-bounce');
                }
            );
        });

        // Custom SweetAlert2 styles
        const furnitureSwalStyles = `
            <style>
                .furniture-swal {
                    font-family: 'Georgia', serif !important;
                }
                .furniture-swal .swal2-title {
                    color: #362D1D !important;
                }
                .furniture-swal .swal2-content {
                    color: #6F4E37 !important;
                }
            </style>
        `;
        document.head.insertAdjacentHTML('beforeend', furnitureSwalStyles);
    </script>
