<div class="content-header">
    <h2 class="content-title">
        <i class="fas fa-couch"></i>
        Ürün Yönetimi
    </h2>
    <a href="/admin/products/create" class="btn-furniture btn-primary-furniture">
        <i class="fas fa-plus"></i>
        Yeni Ürün
    </a>
</div>

<% if (products && products.length> 0) { %>
    <div class="table-responsive">
        <table class="table furniture-table">
            <thead>
                <tr>
                    <th>Resim</th>
                    <th>Ürün Adı</th>
                    <th>Kategoriler</th>
                    <th>Boyutlar</th>
                    <th>Durum</th>
                    <th>Oluşturulma</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product=> { %>
                    <tr>
                        <td>
                            <% let productImage='https://via.placeholder.com/60x60/8B4513/FFFFFF?text=?' ; if
                                (product.images && product.images.length> 0) {
                                productImage = product.images[0];
                                } else if (settings && settings.default_product_image) {
                                productImage = settings.default_product_image;
                                }
                                %>
                                <img src="<%= productImage %>" alt="<%= product.name %>" class="product-thumb">
                        </td>
                        <td><strong>
                                <%= product.name %>
                            </strong></td>
                        <td>
                            <% if (product.categories && product.categories.length> 0) { %>
                                <% product.categories.forEach(category=> { %>
                                    <span class="category-badge"
                                        style="background-color: <%= category.color || '#8B4513' %>;">
                                        <%= category.name %>
                                    </span>
                                    <% }) %>
                                        <% } else { %>
                                            <span class="text-muted">-</span>
                                            <% } %>
                        </td>
                        <td>
                            <%= product.dimensions || '-' %>
                        </td>
                        <td>
                            <% if (product.visible===1) { %>
                                <span class="status-badge status-active">Aktif</span>
                                <% } else { %>
                                    <span class="status-badge status-inactive">Pasif</span>
                                    <% } %>
                        </td>
                        <td>
                            <%= new Date(product.createdAt).toLocaleDateString('tr-TR') %>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="/admin/products/<%= product.id %>/edit" class="btn btn-sm btn-outline-primary"
                                    title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form action="/admin/products/<%= product.id %>/delete" method="POST"
                                    style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-outline-danger btn-delete"
                                        title="Kaldır">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-5x mb-3" style="color: var(--walnut); opacity: 0.3;"></i>
            <h4 style="color: var(--walnut);">Henüz ürün yok</h4>
            <p class="text-muted">Yeni ürün eklemek için yukarıdaki butona tıklayın</p>
            <a href="/admin/products/create" class="btn-furniture btn-primary-furniture mt-3">
                <i class="fas fa-plus"></i>
                İlk Ürünü Ekle
            </a>
        </div>
        <% } %>